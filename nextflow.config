resume = true

trace {
  fields = 'name,hash,status,exit,realtime,submit'
}

// set your directory
dir = "/group/$PAWSEY_PROJECT/$USER/dunnart/"

profiles {

 conda {
    workDir = "${dir}/nf-work"
    process.conda = 'bioconda::pb-assembly=0.0.8-0'
  }

zeus {
  workDir = "${dir}/nf-work"
  process {
    cache = 'lenient'
    stageInMode = 'symlink'
  }

  params.slurm_account = 'pawsey0002'
  process {
    executor = 'slurm'
    queue = 'workq'
    clusterOptions = "--export=ALL"
  }

  executor {
  $slurm {
      cpus = 28
      memory = '128 GB'
  }
  }
}
}